{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2020",
    "removeComments": false,
    "declaration": true,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "typeRoots": ["./node_modules/@types"]
  }
}
